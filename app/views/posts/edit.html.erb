<div class="supreme-container">
  <h1>Edit Post</h1>

  <%= form_for @post, :html => {:multipart => true} do |f| %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <p><%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to 'Back', posts_path %></p>
</div>