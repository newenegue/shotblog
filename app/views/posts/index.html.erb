
<div class="supreme-container">
<% if current_user %>
	<div><%= @show ? (link_to 'My Posts', posts_path) : (link_to 'All Posts', posts_path(show: 'all')) %></div>
<% end %>
</div>
<div class="container">
  <div class="row">
    <% @posts.reverse_each do |post| %>
    	<!-- <div class="row"> -->
        <div class="supreme-container">
          <div class="col-sm-6 col-md-3">
            <a href="#" class="thumbnail" data-toggle="modal" data-target="#<%= post.id %>">
              <%= image_tag post.main_shot.image.thumb('250x250#').url if (post.main_shot  && post.main_shot.image_stored?) %>
              <div class="caption">
                <h3><%= post.title %></h3>
                <p><%= post.likes.length == 1 ? post.likes.length.to_s + ' like' : post.likes.length.to_s + ' likes' %></p>
              </div>
        	  </a>
          </div>
        </div>
      
      <%= render partial: "show_post", locals: {post: post} %>
    <% end %>
  </div>
</div>
